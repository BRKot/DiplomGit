<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_for_work.AuthViewController"
             Title= "">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Label 
            Text="Автороизация"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="login"
            Placeholder="Логин"
            HorizontalOptions="Center"
            HeightRequest="20"
            WidthRequest="150"/>
        <Entry
            x:Name="password"
            IsPassword="True"
            Placeholder="Пароль"
            HorizontalOptions="Center"
            HeightRequest="20"
            WidthRequest="150"/>
        <Button 
            Text="Авторизация"
            HeightRequest="40"
            WidthRequest="150"
            />
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="10">
            <Label 
                Text="Забыл пароль"
                FontSize="10"
                />
            <Label
                x:Name="signUpLabel"
                Text="Зарегистрироваться"
                FontSize="10"
                />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>